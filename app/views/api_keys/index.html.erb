<div class="col-md-5 col-md-offset-1">
<h1>Listing api_keys</h1>

<table>
  <thead>
    <tr>
      <th> App Name </th>
      <th> Access token </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_keys.each do |api_key| %>
      <tr>
        <td><%= api_key.app_name %></td>
        <td><%= api_key.access_token %></td>
        <td><%= link_to 'Show', api_key %></td>
        <td><%= link_to 'Edit', edit_api_key_path(api_key) %></td>
        <td><%= link_to 'Destroy', api_key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Api key', new_api_key_path %>
</div>

<div class="col-md-5 col-md-offset-1">
  <h3>For Demo Purpose </h3>
<%= form_for(:session, url: sessions_path, method: "post") do |f| %>

      <%= f.label :acc_tok %>
      <%= f.text_field :acc_tok %>

      <%= f.submit "Sign in", class: "btn btn-sm btn-primary" %>
<% end %>
</div>
